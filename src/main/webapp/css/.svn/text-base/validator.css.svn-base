@charset "utf-8";
.date {
	position: absolute;
	z-index: 2;
	top: -50px;
	left: 0;
	width: 60px;
	font-size: 11px;
	height: 60px;
	line-height: 17px;
	font-weight: bold;
	text-align: center;
	border: 1px solid #FFF;
	overflow: hidden;
}

.date em {
	font-size: 26px;
	display: block;
	width: 100%;
	line-height: 26px;
	height: 26px;
	overflow: hidden;
}

.content {
	margin: 20px auto 0;
	width: 96%;
	overflow: hidden;
	text-align: left;
}

.content h3 {
	font-weight: bold;
	font-size: 18px;
}

.content p {
	font-size: 14px;
	line-height: 160%;
	padding: 10px 0;
}

.field-wrap {
	overflow: hidden;
}

.field-wrap legend {
	padding: 10px;
	font-size: 16px;
	font-weight: bold;
	margin: 0 20px;
	text-align: center;
	display: none;
	overflow: hidden;
}

.field-item {
	margin: 0 auto;
	padding: 10px 0;
	width: 94%;
	min-height: 26px;
	line-height: 26px;
	clear: both;
}

.field-item label,.field-item input,.field-item select,.field-item textarea
	{
	float: left;
	margin-right: 10px;
	display: inline;
}

.field-item label {
	line-height: 26px;
	height: 26px;
	width: 100px;
	text-align: right;
	overflow: hidden;
}

.field-item span {
	float: left;
	line-height: 26px;
	height: 26px;
	overflow: hidden;
}

.field-item select {
	margin-top: 3px;
	_margin-top: 1px;
}

.input-item {
	width: 210px;
	height: 20px;
	line-height: 20px;
	padding: 5px;
	border: 1px solid #CCC;
}

.center {
	text-align: center;
}

#message {
	width: 500px;
}

#text-counter {
	font-weight: bold;
	color: #C80000;
	padding: 0 10px;
}

#btnsubmit {
	float: none;
	width: 80px;
	line-height: 30px;
	height: 30px;
}

/* Validator */
.validator-tip {
	display: none;
	position: absolute;
	z-index: 999;
	border: 1px solid #40B3FF;
	background: #E5F5FF;
	font-size: 12px;
	color: #666;
	padding: 5px 5px 5px 5px;
	line-height: 16px;
	text-align: left;
	overflow: hidden;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
}

.validator-tip a {
	font-weight: bold;
	padding: 0 5px;
	cursor: pointer;
	color: #039;
}

.tip {
	display: none;
	position: absolute;
	width: 15px;
	margin-left: 10px;
	text-indent: -99999px;
	z-index: 999;
	border: 1px solid #40B3FF;
	font-size: 12px;
	color: #666;
	padding: 5px 5px 5px 5px;
	height: 30px;
	text-align: left;
	overflow: hidden;
}

.tip-normal {
	background: #E5F5FF url(../images/msg_bg.png) 5px -143px no-repeat;
	border: none;
}

.tip-pass {
	background: transparent url(../images/msg_bg.png) 5px -243px no-repeat;
	border: none;
}

.tip-pending {
	background: transparent url(../images/loading.gif) no-repeat;
	border: none;
}

.tip-error {
	background: transparent url(../images/msg_bg.png) 5px 7px no-repeat;
	border: none;
}

.tip-box {
	display: none;
	position: absolute;
	z-index: 999;
	font-family: Verdana,Tahoma,Hei,"宋体",Helvetica,Arial,sans-serif;
	font-size: 12px;
	color: #666;
	padding: 5px 5px 5px 5px;
	line-height: 16px;
	text-align: left;
	overflow: hidden;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
}

.tip-box a {
	font-weight: bold;
	padding: 0 5px;
	cursor: pointer;
	color: #039;
}

.tip-box-normal {
	background: #E5F5FF;
}

.tip-box-pass {
	background: #E6FFE6;
}

.tip-box-error {
	background: #FFF2E9;
}

