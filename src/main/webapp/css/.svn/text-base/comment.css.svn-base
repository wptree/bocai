ul.reviews {
    background-color: #F0EEE4;
    border-radius: 0 0 5px 5px;
    border-top: 1px solid #E1DCC8;
    margin: 0;
    padding: 0;
}
li.review {
    padding: 15px;
}
li.review .comments-container {
    background: none repeat scroll 0 0 #F7F6F1;
    padding: 10px;
}

li.review .review-count {
    margin-bottom: 10px;
}

li.review .review-count a {
    float: right;
    font-size: 100%;
    font-weight: normal;
    margin-left: 10px;
    padding: 4px 5px;
}

li.review .comments-container .avatar {
    float: left;
}

li.review .comments-container .comments .comment {
    margin-bottom: 15px;
    margin-left: 40px;
}

li.review .new-comment .text  {
    width: 450px;
    height:20px;
    float:left;    
    background-color: white;
    border: 1px solid #E1DCC8;
    height: 20px;
    padding-left: 5px;
	border-radius:5px;
}

li.review .new-comment .comment-sumbit  {
    float: left;
    height: 25px;
    line-height: 25px;
    margin: 11px 0 0 10px;
    width: 72px;
}