.upload-input-box {
	background: url(../images/uploadInput.png) no-repeat scroll 0 0 transparent;;
	cursor: pointer;
    height: 37px;
    overflow: hidden;
    position: relative;
    width: 597px;
}

.upload-input {
    cursor: pointer;
    display: block;
    font-size: 80px;
    height: 35px;
    left: 0;
    opacity: 0;
    position: absolute;
    width: 597px;
    z-index: 200;
}