function $id(x)
{
	return document.getElementById(x);
}

function dengluhuandong(x)
{
	if(x==1)
	{
		$id("denglubiaoti").innerHTML="登录";
		$id("dengludiv1").style.display="block";
		$id("dengluli1").className="li2on";
		$id("dengludiv2").style.display="none";
		$id("dengluli2").className="li2off";
	}
	else
	{
		$id("denglubiaoti").innerHTML="加入波菜网";
		$id("dengludiv2").style.display="block";
		$id("dengluli2").className="li2on";
		$id("dengludiv1").style.display="none";
		$id("dengluli1").className="li2off";
	}
}

function removeDefault(inputObject,defaultValue){
	if(inputObject.value===defaultValue){
		inputObject.value = '';
	}
	inputObject.style.color="#000";
}

function setDefault(inputObject,defaultValue){
	if(inputObject.value===''){
		inputObject.value = defaultValue;
		inputObject.style.color="#898989";
	}
}

function headtab(x)
{
	if(x<1||x>5){
		return;
	}
	for(var i=1;i<5;i++)
	{
		$id("bka"+i).className="a2";
	}
	$id("bka"+x).className="a1";
}



